{%- if treeNodes != blank -%}
<ul class="link-list mobile-nav" style="padding-{% unless enable_rtl %}left{% else %}right{% endunless %}:{% if parent_nodes_html != '' %}20px{% else %}0{% endif %};">
	{%- for c in treeNodes -%}
		{%- assign c_handle = c.id | split: '|' | last -%}
		{%- assign collection_node = collections[c_handle] -%}
		{%- if collection_node != blank -%}
		<li class="link-list__item mobile-nav__item level0">
			<a class="dib cfc__link cf__link link-list__item__link" href="{{ collection_node.url }}{{ tag_url }}{{ filter_sortby_param | raw }}" title="{%- render 'nav-shortcode-ign', str: collection_node.title -%}">{%- render 'nav-shortcode', color: settings.header_mobile_color_label, bkg: settings.header_mobile_bkg_label, str: collection_node.title -%}</a>
			{%- if c.children != blank -%}
				<a href="#" class="mobile-nav__arrow flex flex-align-hoz flex-align-ver por transition cfc__arrow dib wicon-plus" title="{{ 'layout.navigation.arrow' | t | escape }}"></a>
				<ul class="link-list__item__dropdown cfc__dropdown" style="display:none;">
					{%- for c1 in c.children -%}
						{%- assign c_handle1 = c1.id | split: '|' | last -%}
						{%- assign collection_node1 = collections[c_handle1] -%}
						{%- if collection_node1 != blank -%}
						<li class="link-list__item mobile-nav__item level1">
							<a class="dib cfc__link cf__link link-list__item__link" href="{{ collection_node1.url }}{{ tag_url }}{{ filter_sortby_param | raw }}" title="{%- render 'nav-shortcode-ign', str: collection_node1.title -%}">{%- render 'nav-shortcode', color: settings.header_mobile_color_label, bkg: settings.header_mobile_bkg_label, str: collection_node1.title -%}</a>
							{%- if c1.children != blank -%}
								<a href="#" class="mobile-nav__arrow flex flex-align-hoz flex-align-ver por transition cfc__arrow dib wicon-plus" title="{{ 'layout.navigation.arrow' | t | escape }}"></a>
								<ul class="link-list__item__dropdown cfc__dropdown" style="display:none;">
									{%- for c2 in c1.children -%}
										{%- assign c_handle2 = c2.id | split: '|' | last -%}
										{%- assign collection_node2 = collections[c_handle2] -%}
										{%- if collection_node2 != blank -%}
										<li class="link-list__item mobile-nav__item level2">
											<a class="dib cfc__link cf__link link-list__item__link" href="{{ collection_node2.url }}{{ tag_url }}{{ filter_sortby_param | raw }}" title="{%- render 'nav-shortcode-ign', str: collection_node2.title -%}">{%- render 'nav-shortcode', color: settings.header_mobile_color_label, bkg: settings.header_mobile_bkg_label, str: collection_node2.title -%}</a>
											{%- if c2.children != blank -%}
												<a href="#" class="mobile-nav__arrow flex flex-align-hoz flex-align-ver por transition cfc__arrow dib wicon-plus" title="{{ 'layout.navigation.arrow' | t | escape }}"></a>
												<ul class="link-list__item__dropdown cfc__dropdown" style="display:none;">
													{%- for c3 in c2.children -%}
														{%- assign c_handle3 = c3.id | split: '|' | last -%}
														{%- assign collection_node3 = collections[c_handle3] -%}
														{%- if collection_node3 != blank -%}
														<li class="link-list__item mobile-nav__item level3">
															<a class="dib cfc__link cf__link link-list__item__link" href="{{ collection_node3.url }}{{ tag_url }}{{ filter_sortby_param | raw }}" title="{%- render 'nav-shortcode-ign', str: collection_node3.title -%}">{%- render 'nav-shortcode', color: settings.header_mobile_color_label, bkg: settings.header_mobile_bkg_label, str: collection_node3.title -%}</a>
															{%- if c3.children != blank -%}
																<a href="#" class="mobile-nav__arrow flex flex-align-hoz flex-align-ver por transition cfc__arrow dib wicon-plus" title="{{ 'layout.navigation.arrow' | t | escape }}"></a>
																<ul class="link-list__item__dropdown cfc__dropdown" style="display:none;">
																	{%- for c4 in c3.children -%}
																		{%- assign c_handle4 = c4.id | split: '|' | last -%}
																		{%- assign collection_node4 = collections[c_handle4] -%}
																		{%- if collection_node4 != blank -%}
																		<li class="link-list__item mobile-nav__item level4">
																			<a class="dib cfc__link cf__link link-list__item__link" href="{{ collection_node4.url }}{{ tag_url }}{{ filter_sortby_param | raw }}" title="{%- render 'nav-shortcode-ign', str: collection_node4.title -%}">{%- render 'nav-shortcode', color: settings.header_mobile_color_label, bkg: settings.header_mobile_bkg_label, str: collection_node4.title -%}</a>
																		</li>
																		{%- endif -%}
																	{%- endfor -%}
																</ul>
															{%- endif -%}
														</li>
														{%- endif -%}
													{%- endfor -%}
												</ul>
											{%- endif -%}
										</li>
										{%- endif -%}
									{%- endfor -%}
								</ul>
							{%- endif -%}
						</li>
						{%- endif -%}
					{%- endfor -%}
				</ul>
			{%- endif -%}
		</li>
		{%- endif -%}
	{%- endfor -%}
</ul>
{%- endif -%}