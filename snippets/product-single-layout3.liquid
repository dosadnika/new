{%- if template.suffix != 'quick_view' -%}
{%- unless no_container -%}
<div class="container{% include 'wide-css-class' %} gutter-bottom gutter-ele-bottom-tbs">
{%- endunless -%}    
  <div class="row">
{%- endif -%}
<div class="col-xs-12 col-md-5 no-gutter-left-mb no-gutter-right-mb{% if enable_rtl %} f-right{% endif %}">
  {%- include 'product-single-media' -%}
</div>

<div class="col-xs-12 col-md-7">
  <div class="row">
    <div class="col-xs-12 col-md-6{% if enable_rtl %} f-right{% endif %}">
      <div class="w100 visible-xs visible-sm" style="margin-top: 10px;"></div>
      {%- include 'product-single-breadcrumbs' -%}
      {%- include 'product-single-name' -%}
      {%- include 'product-single-sold' -%}
      {%- capture review_single_html -%}
        {%- include 'product-review-single' -%}
      {%- endcapture -%}
      {%- if review_single_html != blank or sizechart -%}
      <div class="flex gutter-ele-top gutter-ele-top-tbs gutter-ele-bottom gutter-ele-bottom-tbs{% if review_single_html != blank and sizechart %} flex-align-space-between{% endif %}">
        {{ review_single_html }}
        {%- include 'product-single-size-chart' -%}
      </div>
      {%- endif -%}
      {%- include 'product-single-price' -%}
      <div class="hidden-xs hidden-sm">
        {%- include 'product-single-short-desc' -%}
        <hr style="margin:10px 0;">
      </div>
      {%- render 'product-single-store-availability' with show_bottom_line: true, show_top_line: true, custom_top_line_classes: 'hidden-md hidden-lg' -%}
      <div class="hidden-xs hidden-sm">
        {%- include 'product-single-countdown' -%}
        {%- include 'product-single-hurry-up' -%}
      </div>
      {%- include 'product-single-social-sharing' -%}
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="w100 hidden-xs hidden-sm" style="margin-top: -10px;"></div>
      <div class="pg__main-options">
        {%- include 'product-single-variants' -%}
        {%- include 'product-single-form', align_center_button: true, full_qty_box: true -%}
      </div>
      <div class="hidden-md hidden-lg">
        {%- include 'product-single-short-desc' -%}
        <hr style="margin:10px 0;">
        {%- include 'product-single-countdown' -%}
        {%- include 'product-single-hurry-up' -%}
      </div>
      {%- include 'product-single-payment-badge' -%}
      {%- include 'product-single-view-details' -%}
    </div>
    {%- if template.suffix == 'quick_view' -%}
      {%- unless section.settings.general_info contains '[description]' -%}
        <div class="col-xs-12 gutter-ele-top">{{ description }}</div>
      {%- endunless -%}
    {%- endif -%}
  </div>
</div>

{%- if template.suffix != 'quick_view' -%}
</div>
<div class="row">
<div class="col-xs-12 big-gutter-top">
  {%- include 'product-single-sub-info' -%}
</div>
</div>
{%- unless no_container -%}
</div>
{%- endunless -%}
{%- endif -%}