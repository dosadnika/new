{%- if shop.customer_accounts_enabled or settings.enable_compare -%}
	<div class="header__links header__links--bkg{% if settings.use_sticky %} hide-in-sticky{% endif %}">
		<div class="container{% if settings.header_wide_display %}-fluid{% endif %}">
			<div class="row">
				<div class="col-xs-12 flex flex-align-space-between flex-algin-ver">
					{%- if shop.customer_accounts_enabled or settings.enable_compare -%}
					<div class="header__links__left flex flex-align-ver">
						{%- if settings.enable_compare -%}
							<a href="javascript:void(0);" class="header__link header__link--top{% if enable_rtl %} header__link--reverse{% endif %} header__link--compare flex flex-align-ver" title="{{ 'collections.product_item.compare' | t | escape }}">
								{%- render 'icon-compare' -%}
								{{ 'collections.product_item.compare' | t }}
							</a>
						{%- endif -%}
						{%- if settings.enable_wishlist -%}
							<a href="javascript:void(0);" class="header__link header__link--top header__link--wishlist dib flex flex-align-ver{% if enable_rtl %} header__link--reverse{% endif %}" title="{{ 'general.accessibility.your_wishlist' | t | escape }}">
								{%- render 'icon-wishlist' -%}
								{{ 'general.accessibility.your_wishlist_html' | t }}
							</a>
						{%- endif -%}
						{%- if shop.customer_accounts_enabled -%}
							{%- if customer -%}
								<a href="{{ routes.account_url }}" class="header__link header__link--top{% if enable_rtl %} header__link--reverse{% endif %} flex flex-align-ver" title="{{ 'customer.account.title' | t | escape }}">
									{%- render 'icon-user-circle' -%}
									{{ 'customer.account.title' | t }}
								</a>
								<a href="{{ routes.account_logout_url }}" class="header__link header__link--top{% if enable_rtl %} header__link--reverse{% endif %} flex flex-align-ver" title="{{ 'layout.customer.log_out' | t | escape }}">
									{%- render 'icon-sign-out' -%}
									{{ 'layout.customer.log_out' | t }}
								</a>
							{%- else -%}	
								<div class="bt-dropdown h100" data-group="header__links">
									<a class="bt-dropdown__trigger header__link header__link--top{% if enable_rtl %} header__link--reverse{% endif %} flex flex-align-ver" title="{{ 'customer.account.title' | t | escape }}" href="{{ routes.account_login_url }}">
										{%- render 'icon-sign-in' -%}
										{{ 'customer.login.title' | t }}
									</a>
									<div class="bt-dropdown__content bt-dropdown__content--left">
										{%- render 'login-form-header', id: 'customer_login_header', suffix_id_field: 'Header', enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder -%}
									</div>
								</div>
								<a href="{{ routes.account_register_url }}" class="header__link header__link--top{% if enable_rtl %} header__link--reverse{% endif %} flex flex-align-ver" title="{{ 'customer.register.title' | t | escape }}">
									{%- render 'icon-user-circle' -%}
									{{ 'customer.register.title' | t }}
								</a>
							{%- endif -%}
						{%- endif -%}
						{%- render 'language-picker', data_group: 'header__links', show_language_icon: true, addition_classes: 'header__link header__link--top', flex_trigger: true -%}
					</div>
					{%- endif -%}
					<div class="header__links__right flex flex-align-ver">
						{%- render 'currency-switcher', addition_classes: 'header__link--top', flex_trigger: true -%}
						{%- render 'header-cart', addition_classes: 'header__link--top no-gutter--right', cart_dropdown_direction: 'bt-dropdown__content--right', enable_rtl: enable_rtl, left_holder: left_holder, right_holder: right_holder -%}
					</div>
				</div>
			</div>
		</div>				
	</div>
{%- endif -%}
<div class="container{% if settings.header_wide_display %}-fluid{% endif %} use-sticky--desktop-collapse" data-collapse-sticky="0">
	<div class="row header__wrap flex flex-align-ver">
		<div class="col-xs-12 text-center gutter-ele-top gutter-ele-bottom{% if settings.use_sticky %} hide-in-sticky{% endif %}">{% render 'header__logo' %}</div>
		<div class="col-xs-9 position-static flex{% if settings.use_sticky %} use-sticky--desktop {% endif %}">{% section 'navigation' %}</div>
		<div class="col-xs-3 text-right">{%- render 'search-form' -%}</div>
	</div>
	<div class="w100 gutter-ele-bottom hide-in-sticky"></div>
</div>