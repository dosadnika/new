{%- liquid
  unless settings.enable_rtl and settings.rtl_language_codes contains request.locale.iso_code
    assign enable_rtl = false
  else
    assign enable_rtl = true
  endunless
%}
{%- render 'section-background-start' -%}
<div class="container{% if section.settings.full_width %}-fluid{% endif %}{% render 'section-gutters-nobkg' %}{% if section.settings.small_top_gutter %} gutter-top{% endif %}{% if section.settings.small_bottom_gutter %} gutter-bottom{% endif %} fcl lh1" data-section-id="{{ section.id }}" data-section-type="flexible-collection-list" id="flexible-collection-list-{{ section.id }}">
  <div class="row">
    <div class="section__inner col-xs-12">
      {%- render 'section-heading' -%}
      <div class="section__content">
        <div class="row">
          {%- if section.blocks.size > 0 -%}
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'flex-collection-list-1' -%}
                {%- render 'flex-collection-list-1' with block as block, index: forloop.index, enable_rtl: enable_rtl -%}
              {%- when 'flex-collection-list-2' -%}
                {%- render 'flex-collection-list-2' with block as block, index: forloop.index, enable_rtl: enable_rtl -%}
              {%- when 'flex-collection-list-3' -%}
                {%- render 'flex-collection-list-3' with block as block, index: forloop.index, enable_rtl: enable_rtl -%}
              {%- when 'flex-collection-list-4' -%}
                {%- render 'flex-collection-list-4' with block as block, index: forloop.index, enable_rtl: enable_rtl -%}
              {%- when 'flex-collection-list-5' -%}
                {%- render 'flex-collection-list-5' with block as block, index: forloop.index, enable_rtl: enable_rtl -%}
              {%- when 'flex-collection-list-6' -%}
                {%- render 'flex-collection-list-6' with block as block, index: forloop.index, enable_rtl: enable_rtl -%}
            {%- endcase -%}
          {%- endfor -%}
          {%- endif -%}
          
          {% if section.blocks.size == 0 %}
            <div class="col-xs-12">
              {%- render 'no-blocks' -%}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{%- render 'section-background-end' -%}
